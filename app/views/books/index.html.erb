<h1>Here will list my books</h1>
<% if @books.empty? %>
    <p>No book</p>
<% else %>
    <table border="0">
        <tr>
            <th>ISBN</th>
            <th>Total</th>
        </tr>
        <% @books.each do |book| %>
            <tr>
                <td>
                    <%= book.ISBN %>
                </td>
                <td>
                    <%= get_book_count_by_user_book current_user, book %>
                </td>
                <td>
                    <%= link_to 'Show details', book_path(book) %>
                </td>
            </tr>
        <% end %>
    </table>
<% end %>
<%= link_to 'Add books', new_book_path %>
